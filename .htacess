Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE, PUT"
Header always set Access-Control-Allow-Headers "Content-Type"

RewriteEngine On


RewriteCond %{REQUEST_METHOD} ^GET$
RewriteRule ^home$ controllers/hotels.php?action=index [NC]

RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^hotel$ controllers/hotels.php?action=create [NC]

RewriteCond %{REQUEST_METHOD} ^PUT$
RewriteRule ^hotel/([0-9]+)$ controllers/hotels.php?action=update&id=$1 [NC]

RewriteCond %{REQUEST_METHOD} ^DELETE$
RewriteRule ^hotel/([0-9]+)$ controllers/hotels.php?action=delete&id=$1 [NC]

RewriteCond %{REQUEST_METHOD} ^OPTIONS$
RewriteRule ^(.*)$ $1 [R=200,L] [NC]
